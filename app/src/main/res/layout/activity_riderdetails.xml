<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/themeimage1"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:id="@+id/profilepic_id"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_marginTop="-100dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/profilepicroundcontainer"/>
    <TextView
        android:id="@+id/profilename_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/profilefromto_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Travel Details"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/profiledate_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Travel Date"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/profiletime_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="15:20"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:gravity="center"/>
    <Button
        android:id="@+id/sendrequestbtn_id"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/roundbtntransparentwhite"
        android:text="Send Request"
        android:fontFamily="monospace"
        android:textColor="@color/colorWhite"/>

</LinearLayout>